<% layout('layouts/boilerplate') %>
<h1 class="text-center">Add Campground</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text", id="title", name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text", id="location", name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Imgage URL</label>
                <input class="form-control" type="text", id="image", name="campground[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                    <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input type="text" class="form-control" id="price" placeholder="0.0" aria-label="price" aria-describedby="price-label" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text", id="description", name="campground[description]"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            <div>
                <a href="/campgrounds"> All Campgrounds</a>
            </div> 
        </form>
    </div>
</div>
